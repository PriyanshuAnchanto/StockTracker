<div class="row">
  <div class="col-9">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.first_name+" "+friend.last_name %></td>
            <td><%= friend.email %></td>
            <td> <%= link_to 'View profile',user_profile_path(friend),class: "btn btn-primary"%></td>
            <td> <%= link_to 'Remove Friend',friendship_path(friend),class: "btn btn-warning",method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>