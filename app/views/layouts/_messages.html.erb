<div class="alert alert-<%= alert ? "danger" : "success" %> alert-dismissible fade show" role="alert">
    <% if notice %>
      <%= notice %> 
    <% elsif alert %>
      <%= alert %>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
</div>